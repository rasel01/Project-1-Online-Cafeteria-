<!DOCTYPE html>


<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - UIU Canteen</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
</head>
    <body>
        <div class=" navbar navbar-default" role="navigation" >
            <a class="navbar-brand" href="#">
                <span class="hidden-xs"> UIU Canteen</span>
                <div class="visible-xs">UIU</div>
                <div class="visible-xs">Canteen</div>
                
            </a>

            @Html.Action("Summary","Cart")
            
        </div>
        <div class="row panel">
            <div id="categories" class="col-lg-3">
                @Html.Action("Menu","Nav")

            </div>
            <div class="col-lg-7"> @RenderBody() </div>
            
        </div>
        
        
    
        <footer>
            <p>&copy; @DateTime.Now.Year -UIU Cafeteria Powered by UIUans </p>
        </footer>
    

   
    </body>
</html>